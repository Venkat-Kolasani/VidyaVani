# VidyaVani IVR Learning System - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
PORT=5000

# Exotel Configuration (Required)
EXOTEL_ACCOUNT_SID=your-exotel-account-sid
EXOTEL_API_KEY=your-exotel-api-key
EXOTEL_API_TOKEN=your-exotel-api-token
EXOTEL_PHONE_NUMBER=your-exotel-phone-number
EXOTEL_APP_ID=your-exotel-app-id

# OpenAI Configuration (Required)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-5-nano
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Google Cloud Configuration (Required for STT/TTS)
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Performance Configuration
MAX_CONCURRENT_CALLS=5
RESPONSE_TIMEOUT=8
CACHE_TTL=3600

# Audio Configuration
MAX_RECORDING_DURATION=15
AUDIO_SAMPLE_RATE=16000

# Content Configuration
CONTENT_CHUNK_SIZE=300
CONTENT_OVERLAP=50
TOP_K_RETRIEVAL=3

# Redis Configuration (Optional - falls back to in-memory)
REDIS_URL=redis://localhost:6379/0

# Production Configuration
DEPLOYMENT_PLATFORM=local
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Monitoring
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
MAX_BACKUPS=10
AUTO_BACKUP_INTERVAL_HOURS=6

# Security
ADMIN_RESTART_KEY=your-admin-restart-key-here